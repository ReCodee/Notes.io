<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.EditProfileFragment"
    android:background="@color/skin"
    android:orientation="vertical">
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/back_button"
            android:layout_gravity="center_vertical|start"
            android:background="@android:color/transparent"
            android:id="@+id/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Edit Profile"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/lightBrown"
            android:textSize="20dp">
        </TextView>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/tick_icon"
            android:layout_gravity="center_vertical|end"
            android:background="@android:color/transparent"
            android:id="@+id/save_button" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:textColor="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/nunito_black"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:text="Full Name"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:id="@+id/profile_update_fullname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_black"
            android:inputType="textPersonName"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Email Address"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:id="@+id/profile_update_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:inputType="textWebEmailAddress"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="5dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_corner">
        </EditText>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_horizontal"
           android:layout_marginTop="20dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:fontFamily="@font/nunito_extrabold"
               android:text="Update Passowod"
               android:textColor="@color/lightBrown">
           </TextView>
           <CheckBox
               android:id="@+id/pass_update"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
           </CheckBox>
       </LinearLayout>
      <LinearLayout
          android:id="@+id/update_pass_visibility"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="invisible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Old Password"
            android:textColor="#403B36">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:theme="@style/TextLabel">
            <EditText
                android:id="@+id/old_pass"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:inputType="textPassword"

                android:windowSoftInputMode="adjustPan"
                android:textColor="#403B36"
                android:textCursorDrawable="@null"
                android:paddingLeft="5dp"
                android:fontFamily="@font/nunito_black"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_corner">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Password"
            android:textColor="#403B36">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:theme="@style/TextLabel">
            <EditText
                android:id="@+id/new_pass"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:windowSoftInputMode="adjustPan"
                android:textColor="#403B36"
                android:textCursorDrawable="@null"
                android:paddingLeft="5dp"
                android:fontFamily="@font/nunito_black"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_corner">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
      </LinearLayout>
    </LinearLayout>

</LinearLayout>