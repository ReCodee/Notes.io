<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsFragment"
    android:orientation="vertical"
    android:background="@color/skin">

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/back_button"
            android:layout_gravity="center_vertical|start"
            android:background="@android:color/transparent"
            android:id="@+id/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Settings"
            android:fontFamily="@font/nunito_extrabold"
            android:textColor="@color/lightBrown"
            android:textSize="25dp">
        </TextView>
    </FrameLayout>

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@drawable/full_round_corner">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:text="Sambhavi Mishra"
        android:fontFamily="@font/nunito_extrabold"
        android:textFontWeight="1000"
        android:textColor="#403B36"
        android:id="@+id/profile_name">
    </TextView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="20dp"
        android:background="@color/skin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/premium_icon"
            android:padding="5dp"
            android:layout_gravity="center_vertical|start">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Premium"
            android:textColor="@color/lightBrown"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***Free for early users"
            android:textColor="@color/orange"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="14sp">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <ImageView
            android:id="@+id/premium_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/arrow_icon"
            android:padding="5dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/skin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/edit_icon"
            android:padding="5dp"
            android:layout_gravity="center_vertical|start">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/lightBrown"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="18sp">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <ImageView
            android:id="@+id/edit_profile_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/arrow_icon"
            android:padding="5dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/skin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/theme_icon"
            android:padding="5dp"
            android:layout_gravity="center_vertical|start">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Theme"
            android:textColor="@color/lightBrown"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="18sp">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <ImageView
            android:id="@+id/theme_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/arrow_icon"
            android:padding="5dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/skin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/security_icon"
            android:padding="5dp"
            android:layout_gravity="center_vertical|start">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textColor="@color/lightBrown"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="18sp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="***Coming Soon"
            android:textColor="@color/orange"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="14sp">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <ImageView
            android:id="@+id/security_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/arrow_icon"
            android:padding="5dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/skin"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_corner"
            android:src="@drawable/logout_icon"
            android:padding="5dp"
            android:layout_gravity="center_vertical|start">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/lightBrown"
            android:fontFamily="@font/nunito_extrabold"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:textSize="18sp">
        </TextView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>
        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/arrow_icon"
            android:padding="5dp">
        </ImageView>
    </LinearLayout>









</LinearLayout>