<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otherScreens.NewUserScreen"
    android:orientation="vertical"
    android:background="@color/skin">

   <include layout="@layout/custom_action_bar_layout" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/new_user"
        android:layout_gravity="center">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Create your first note"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Add a note about anything (your thoughts on climate change, or your history essay) and share it witht the world."
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#403B36">
    </TextView>
    <Button
        android:id="@+id/new_user_button"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:text="Create A Note"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_extrabold"
        android:textSize="50px"
        android:backgroundTint="#D9614C">
    </Button>
</LinearLayout>