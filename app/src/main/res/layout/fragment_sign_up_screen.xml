<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.signUp.SignUpScreen"
    android:orientation="vertical"
    android:background="#F8EEE2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Notes.io"
        android:fontFamily="@font/titanone_regular"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:fontFamily="@font/nunito_extrabold"
        android:layout_gravity="center"
        android:text="Create a free account"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:textSize="17dp"
        android:fontFamily="@font/nunito_regular"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#403B36"
        android:text="Join Notes.io for free. Create and share unlimited notes with your friends.">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:textColor="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/nunito_black"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:text="Full Name"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:id="@+id/full_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:hint="James Shield"
            android:textColorHint="#8C8173"
            android:letterSpacing="0.05"
            android:fontFamily="@font/nunito_black"
            android:inputType="textPersonName"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Email Address"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:inputType="textWebEmailAddress"
            android:windowSoftInputMode="adjustPan"
            android:hint="ShieldJames@gmail.com"
            android:textColorHint="#8C8173"
            android:letterSpacing="0.05"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="10dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Password"
            android:textColor="#403B36">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:endIconMode="password_toggle"
            android:hint="###########"
            android:textColorHint="#8C8173"
            android:letterSpacing="0.05"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:theme="@style/TextLabel">
            <EditText
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:windowSoftInputMode="adjustPan"
                android:textColor="#403B36"
                android:textCursorDrawable="@null"
                android:paddingLeft="10dp"
                android:fontFamily="@font/nunito_black"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_corner">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Google_Button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/skin"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:paddingLeft="10dp"
            android:text="Continue With "
            android:layout_gravity="center_vertical"
            android:textColor="@color/orange"
            android:fontFamily="@font/nunito_bold">
        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="2dp"
            android:src="@drawable/google_logo">
        </ImageView>
    </LinearLayout>
    <TextView
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:text="OR"
        android:textColor="@color/lightBrown">
    </TextView>
    <Button
        android:id="@+id/create_account"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:textSize="25dp"
        android:backgroundTint="@color/orange">
    </Button>
    <TextView
        android:id="@+id/to_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#D9614C"
        android:text="Already have an account?">

    </TextView>

</LinearLayout>