<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.signUp.SignUpScreen"
    android:orientation="vertical"
    android:background="#F8EEE2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60px"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:text="Notes.io"
        android:fontFamily="@font/titanone_regular"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:textSize="60px"
        android:fontFamily="@font/nunito_extrabold"
        android:layout_gravity="center"
        android:text="Create a free account"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="690px"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:textSize="40px"
        android:fontFamily="@font/nunito_regular"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#403B36"
        android:text="Join Notes.io for free. Create and share unlimited notes with your friends.">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:textColor="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0px"
            android:fontFamily="@font/nunito_black"
            android:textSize="30px"
            android:layout_gravity="center"
            android:text="Full Name"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="5px"
            android:textSize="30px"
            android:fontFamily="@font/nunito_black"
            android:inputType="text"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="5px"
            android:layout_gravity="center"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:textSize="30px"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Email Address"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="5px"
            android:textSize="30px"
            android:inputType="textWebEmailAddress"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="5px"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60px"
            android:textSize="30px"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Password"
            android:textColor="#403B36">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:endIconMode="password_toggle"
            android:theme="@style/TextLabel">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginTop="5px"
                android:textColor="#403B36"
                android:textSize="30px"
                android:inputType="textPassword"
                android:textCursorDrawable="@null"
                android:windowSoftInputMode="adjustPan"
                android:paddingLeft="5px"
                android:fontFamily="@font/nunito_black"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_corner">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/create_account"
        android:layout_width="500px"
        android:layout_height="120px"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:textSize="30px"
        android:backgroundTint="#D9614C">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30px"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_bolditalic"
        android:textColor="#D9614C"
        android:text="Already have an account?">

    </TextView>

</LinearLayout>