<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentication.signUp.SignUpScreen"
    android:orientation="vertical"
    android:background="#F8EEE2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:text="Notes.io"
        android:fontFamily="@font/titanone_regular"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:textSize="30dp"
        android:fontFamily="@font/nunito_extrabold"
        android:layout_gravity="center"
        android:text="Create a free account"
        android:textColor="#403B36">
    </TextView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:textSize="17dp"
        android:fontFamily="@font/nunito_regular"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#403B36"
        android:text="Join Notes.io for free. Create and share unlimited notes with your friends.">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:textColor="@color/black">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/nunito_black"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:text="Full Name"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:fontFamily="@font/nunito_black"
            android:inputType="textPersonName"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Email Address"
            android:textColor="#403B36">
        </TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:inputType="textWebEmailAddress"
            android:windowSoftInputMode="adjustPan"
            android:textColor="#403B36"
            android:textCursorDrawable="@null"
            android:paddingLeft="5dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_corner">
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_black"
            android:layout_gravity="center"
            android:text="Password"
            android:textColor="#403B36">
        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/password_toggle"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:theme="@style/TextLabel">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:inputType="textPassword"

                android:windowSoftInputMode="adjustPan"
                android:textColor="#403B36"
                android:textCursorDrawable="@null"
                android:paddingLeft="5dp"
                android:fontFamily="@font/nunito_black"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:background="@drawable/round_corner">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/create_account"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="Create Account"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        android:textSize="25dp"
        android:backgroundTint="#D9614C">
    </Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="#D9614C"
        android:text="Already have an account?">

    </TextView>

</LinearLayout>